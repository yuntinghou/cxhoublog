<div class="post-preview">
    <a href="/posts/<%- post._id %>">
        <h2 class="post-title">
            <%- post.title %>
        </h2>
        <% if (post.subtitle !== "") {%>
        <h3 class="post-subtitle">
            <%- post.subtitle %>
        </h3>
        <% } %>
    </a>
    <p class="post-meta">Posted by <a href="#"><%- post.author %></a> on <%- post.created_at %></p>
</div>
<hr>
